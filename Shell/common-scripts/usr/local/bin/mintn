#!/bin/bash
while ! `ping -q -w 1 -c 1 $(ip r | grep default | cut -d ' ' -f 3) > /dev/null`
do
    sleep 60
done

pkgver=$(wget -cqO- https://www.linuxmint.com/ | grep "?p=" | grep "div" | head -n 1 | cut -d '"' -f 4 | cut -d '=' -f 2)

if [[ $pkgver == 3590 ]]; then
    printf "Mintï…¤\n"
else
    printf "Mint${pkgver}\n"
fi
