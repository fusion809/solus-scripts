#!/bin/bash
while ! `ping -q -w 1 -c 1 $(ip r | grep default | cut -d ' ' -f 3) > /dev/null`
do
    sleep 60
done

# Determine pkgver from ebuild
function ebver {
    ls -ld * | head -n 1 | sed "s/[a-zA-Z0-9: .]*${1}/${1}/g" | cut -d '-' -f ${2} | sed 's/.ebuild//g'
}

export -f ebver

# Determine pkgver from spec file
function spver {
    if ! [[ -n $2 ]]; then
         cat /data/OBS/home:fusion809/${1}/${1}.spec | grep "Version:" | cut -d ':' -f 2 | sed 's/\s*//g'
    elif [[ $2 == "vim" ]]; then
         basever=$(cat /data/OBS/home:fusion809/${1}/${1}.spec | grep "%define baseversion" | sed 's/\s*//g')
         patver=$(cat /data/OBS/home:fusion809/${1}/${1}.spec | grep "%define patchversion" | sed 's/\s*//g')
         pkgver=${basever}.${patver}
         printf "${basever}.${patver}"
    fi
}

export -f spver
