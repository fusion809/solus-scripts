#!/bin/bash
while ! `ping -q -w 1 -c 1 $(ip r | grep default | cut -d ' ' -f 3) > /dev/null`
do
    sleep 60
done

if `which wget > /dev/null 2>&1`; then
    pkgver=$(wget -cqO- https://netbeans.org/downloads | grep ARTIFACTS | head -n 1 | cut -d '/' -f 5)
elif `which curl > /dev/null 2>&1`; then
    pkgver=$(curl -sL https://netbeans.org/downloads | grep ARTIFACTS | head -n 1 | cut -d '/' -f 5)
else
    printf "Neither cURL nor wget are detected, please install them, or if installed add to system PATH.\n" && exit
fi

pkgpver=$(cat /data/OBS/home:fusion809/netbeans/netbeans.spec | grep "Version:" | cut -d ':' -f 2 | sed 's/\s*//g')

if [[ $pkgver == $pkgpver ]]; then
    printf "NBï…¤\n"
else
    printf "NB${pkgver}\n"
fi
